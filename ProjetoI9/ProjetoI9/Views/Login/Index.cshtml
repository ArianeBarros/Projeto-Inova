    <div class="container" id="cont">
        <form id="loginSection" method="post" action="HomeCadastrado" class="contact100-form validate-form" style:"background:#black;">
            <div class="wrap-contact100">
                <div class="contact100-pic js-tilt" data-tilt>
                    <img src="~/Imagens/cad.png" alt="IMG">
                </div>

                <div class="wrap-input100 validate-input" data-validate="Name is required">
                    <input class="input100" type="text" id="nome" placeholder="Nome" required pattern=".{6,}" title="No mínimo 6 caracteres" name="u.nome" onblur="Nome(value)" onclick="ClickNome()">
                    <span class="focus-input100" id="nomeF"></span>
                    <span class="symbol-input100" id="nomeS">
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </span>
                </div>
                @*<img id="alertNome2" src="~/Imagens/alertNome2.png" />*@

                <div class="wrap-input100 validate-input" data-validate="Valid password is required">
                    <input class="input100" placeholder="Senha" id="senha" type="password" name="u.senha" required onblur="Senha(value)" title="No mínimo 6 caracteres" onclick="ClickSenha()">
                    <span class="focus-input100" id="senhaF"></span>
                    <span class="symbol-input100" id="senhaS">
                        <i class="fa fa-lock" aria-hidden="true"></i>
                    </span>
                </div>
                @*<img id="alertSenha" src="~/Imagens/alertSenha.png" />*@

            </div>
            <div class="container-contact100-form-btn">
                <button class="contact100-form-btn" onclick="Pode()" id="btnCadastrar">
                    Login
                </button>
            </div>
            <div id="cadastro"><a href="#" id="cad">Já possui cadastro?</a></div>
        </form>
