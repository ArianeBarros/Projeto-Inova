    <script type="text/javascript">
        var bNome = false;
        var bEmail = false;
        var bData = false;
        var bSenha = false;
        var bVer = false;

        window.onload = function()
        {
            Carregar();
            Organiza();
        }

        window.onresize = function () {
            Organiza();
        }

        function Organiza() {
            var btn = document.getElementById("btnCadastrar");
            var fundo = document.getElementById("ondas");
            var cont = document.getElementById("cont");
            if (window.innerWidth >= 1300) {
                fundo.style.width = "100%";
                cont.style.left = "2%";
                btn.style.left = "150%";
            }
            else {
                cont.style.left = "4%";
                if (window.innerWidth >= 1200) {
                    btn.style.left = "150%";
                    btn.style.width = "222%";
                    btn.style.top = "-7em";
                }
                else {
                    if (window.innerWidth >= 800) {
                        if (window.innerWidth >= 992) {
                            btn.style.left = "106%";
                            btn.style.width = "92%";
                            btn.style.top = "-7em";
                        }
                        else {
                            fundo.style.width = "120%";
                            btn.style.top = "-7em";
                        }
                    }
                    else {
                        if (window.innerWidth >= 770) {
                            btn.style.left = "78%";
                            btn.style.width = "80%";
                            btn.style.top = "-7em";
                        }
                        else
                            if (window.innerWidth >= 576) {
                                btn.style.left = "-1%";
                                btn.style.top = "-7em";
                                btn.style.width = "67%";
                            }
                            else {
                                btn.style.left = "-10%";
                                btn.style.top = "-7em";
                                btn.style.width = "75%";
                            }
                    }
                }
            }

        }

