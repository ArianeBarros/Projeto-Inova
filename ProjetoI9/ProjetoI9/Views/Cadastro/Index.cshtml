        function Pode() {
            if (!bNome)
                document.getElementById("nome").value = "";

            if (!bEmail)
                document.getElementById("email").value = "";

            if (!bData)
                document.getElementById("data").value = "";

            if (!bSenha)
                document.getElementById("senha").value = "";

            if (!bVer)
                document.getElementById("ver").value = "";
        }

        function Data() {
            var dig = document.getElementById("data").value;
            if (isNaN(dig[dig.length - 1])) {
                document.getElementById("data").value = dig.substring(0, dig.length - 1);
            }
            else {
                if (dig.length == 2)
                    document.getElementById("data").value = dig + "/";

                if (dig.length == 5)
                    document.getElementById("data").value = dig + "/";
            }
        }

        function Nome(dig) {
            var lista = @Html.Raw(Json.Encode(ViewData["List"]));
            var val = true;
            var val2 = true;
            if (dig == "")
                val = false;
            if (dig.length < 6)
                val = false;
            for (var i = 0; i <@ViewBag.Qtos;i++) {
                var nome = JSON.stringify(lista[i].nome).split('"');
                nome=nome[1];
                if (nome == dig)
                    val2 = false;
            }
            if (!val) {
                document.getElementById("alertNome").style.display = "block";
                document.getElementById("alertNome2").style.display = "none";
                document.getElementById("nome").style.boxShadow = "5px 5px red";
                document.getElementById("nomeS").style.color = "red";
                document.getElementById("nomeF").style.color = "red";
                bNome = false;
            }
            if (!val2) {
                document.getElementById("alertNome").style.display = "none";
                document.getElementById("alertNome2").style.display = "block";
                document.getElementById("nome").style.boxShadow = "5px 5px red";
                document.getElementById("nomeS").style.color = "red";
                document.getElementById("nomeF").style.color = "red";
                bNome = false;
            }
            if (val && val2) {
                document.getElementById("nome").style.boxShadow = "5px 5px green";
                document.getElementById("nomeS").style.color = "green";
                document.getElementById("nomeF").style.color = "green";
                bNome = true;
            }
        }
        function Email(dig) {
            var lista = @Html.Raw(Json.Encode(ViewData["List"]));
            var val = true;
            var val2 = true;
            if (dig == "")
                val = false;

            var tem = false;
            for (var i = 0; i < dig.length; i++) {
                if (dig.charCodeAt(i) == 64)
                    tem = true;
            }

            if (tem) {
                if (dig.indexOf(".com") < 1)
                    tem = false;
            }
            if (!tem)
                val = false;

             for (var i = 0; i <@ViewBag.Qtos;i++) {
                var email = JSON.stringify(lista[i].email).split('"');
                email=email[1];
                if (email == dig)
                    val2 = false;
            }
             if (!val) {
                 document.getElementById("email").style.boxShadow = "5px 5px red";
                 document.getElementById("emailS").style.color = "red";
                 document.getElementById("emailF").style.color = "red";
                 document.getElementById("alertEmail").style.display = "block";
                 document.getElementById("alertEmail2").style.display = "none";
                 bEmail = false;
             }
            if (!val2) {
                document.getElementById("email").style.boxShadow = "5px 5px red";
                document.getElementById("emailS").style.color = "red";
                document.getElementById("emailF").style.color = "red";
                document.getElementById("alertEmail2").style.display = "block";
                document.getElementById("alertEmail").style.display = "none";
                bEmail = false;
            }
            if(val && val2) {
                document.getElementById("email").style.boxShadow = "5px 5px green";
                document.getElementById("emailS").style.color = "green";
                document.getElementById("emailF").style.color = "green";
                bEmail = true;
            }
        }

        function DataFinal(dig) {
            if (dig == "")
                val = false;
            else {
                var dia = dig.substring(0, 2);
                var mes = dig.substring(3, 5);
                var ano = dig.substring(6);

                if (mes > 12)
                    val = false;
                else {
                    var data = new Date(ano, mes-1, dia);
                    var val = true;

                    if (data.getTime() < (new Date("1960", "01", "01").getTime()))
                        val = false;

                    if (data.getTime() > (new Date("2019", "01", "01").getTime()))
                        val = false;

                    if (data.getMonth() > 12)
                        val = false;
                    document.getElementById("data").value = data.toLocaleDateString();
                }
            }
            if (!val) {
                document.getElementById("data").style.boxShadow = "5px 5px red";
                document.getElementById("dataS").style.color = "red";
                document.getElementById("dataF").style.color = "red";
                document.getElementById("alertData").style.display = "block";
                bData = false;
            }
            else {
                document.getElementById("data").style.boxShadow = "5px 5px green";
                document.getElementById("dataS").style.color = "green";
                document.getElementById("dataF").style.color = "green";
                bData = true;
            }
        }
        function Senha(dig) {

            var val = true;
            if (dig == "")
                val = false;
            if (dig.length < 6)
                val = false;

            if (!val) {
                document.getElementById("senha").style.boxShadow = "5px 5px red";
                document.getElementById("senhaS").style.color = "red";
                document.getElementById("senhaF").style.color = "red";
                document.getElementById("alertSenha").style.display = "block";
                bSenha = false;
            }
            else {
                document.getElementById("senha").style.boxShadow = "5px 5px green";
                document.getElementById("senhaS").style.color = "green";
                document.getElementById("senhaF").style.color = "green";
                bSenha = true;
            }
        }
        function Ver(dig) {

            var val = true;
            if (dig == "")
                val = false;
            if (dig != document.getElementById("senha").value)
                val = false;
            if (document.getElementById("senhaS").style.color == "red")
                val = false;

            if (!val) {
                document.getElementById("ver").style.boxShadow = "5px 5px red";
                document.getElementById("verS").style.color = "red";
                document.getElementById("verF").style.color = "red";
                document.getElementById("alertVer").style.display = "block";
                bVer = false;
            }
            else {
                document.getElementById("ver").style.boxShadow = "5px 5px green";
                document.getElementById("verS").style.color = "green";
                document.getElementById("verF").style.color = "green";
                bVer = true;
            }
        }

        function ClickNome() {
            document.getElementById("alertNome").style.display = "none";
            document.getElementById("alertNome2").style.display = "none";
        }
        function ClickEmail() {
            document.getElementById("alertEmail").style.display = "none";
            document.getElementById("alertEmail2").style.display = "none";
        }
        function ClickData() {
            document.getElementById("alertData").style.display = "none";
        }
        function ClickSenha() {
            document.getElementById("alertSenha").style.display = "none";
        }
        function ClickVer() {
            document.getElementById("alertVer").style.display = "none";
        }


    </script>
